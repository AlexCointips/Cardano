name:                cardano-util-test
version:             0.1.0.0
synopsis:            Utility types and functions for testing Cardano
description:         Utility types and functions for testing Cardano
license:             MIT
license-file:        LICENSE
author:              IOHK
maintainer:          operations@iohk.io
copyright:           2018 IOHK
category:            Currency
build-type:          Simple
cabal-version:       >=1.10

library
  exposed-modules:
                       Test.Cardano.Util.Base16
                       Test.Cardano.Util.Gen
                       Test.Cardano.Util.Golden
                       Test.Cardano.Util.Orphans
                       Test.Cardano.Util.QuickCheck.Arbitrary
                       Test.Cardano.Util.QuickCheck.Property
                       Test.Cardano.Util.Tripping

  build-depends:       base
                     , aeson
                     , attoparsec
                     , base16-bytestring
                     , bytestring
                     , cardano-prelude
                     , cryptonite
                     , formatting
                     , hedgehog
                     , hspec
                     , pretty-show
                     , QuickCheck
                     , quickcheck-instances
                     , text
                     , time-units

  default-language:    Haskell2010
  default-extensions:  NoImplicitPrelude

  ghc-options:         -Wall
                       -Werror
